<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--targetRuntime="MyBatis3"-->
    <context id="mysql" defaultModelType="hierarchical" targetRuntime="MyBatis3Simple">
        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--注释生成器  使用自定义插件 生成 我们的实体类注释(根据数据库的注释)-->
        <commentGenerator type="top.oneyi.util.MyCommentGenerator">
            <!-- 是否去除自动生成的注释  true 是  false 否-->
            <!--            <property name="suppressDate" value="true"/>
                        <property name="suppressAllComments" value="false"/>-->
            <!-- 是否添加数据表中字段的注释 true 是  false 否-->
            <!--            <property name="addRemarkComments" value="true"/>-->
        </commentGenerator>

        <!-- 必须要有的，使用这个配置链接数据库 @TODO:是否可以扩展 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/oneyi"
                        userId="root"
                        password="root">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- 生成domain对象 -->
        <javaModelGenerator targetPackage="top.oneyi.pojo" targetProject="Mybatis-Generator/src/top.oneyi.demo.main/java">
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <!-- 生成Mapper文件 -->
        <sqlMapGenerator targetPackage="top.oneyi.mapper" targetProject="Mybatis-Generator/src/top.oneyi.demo.main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成Mapper接口 -->
        <javaClientGenerator targetPackage="top.oneyi.mapper" type="XMLMAPPER"
                             targetProject="Mybatis-Generator/src/top.oneyi.demo.main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!-- ============================================================================== -->
        <!--domainObjectName="User"-->
        <table tableName="md_cus" delimitIdentifiers="true">
            <!--            false 生成的实体类为驼峰  ture 则是数据库字段什么样实体类就什么样-->
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="JDBC"/>
<!--            数据库中存在text类型的字段 需要添加在这里 否则 就会出现 以WithBLOBs后缀的实体-->
            <columnOverride column="fu_jian" javaType="java.lang.String" jdbcType="VARCHAR" />
        </table>


        <!-- ============================================================================= -->
<!--        <table tableName="md_goods" delimitIdentifiers="true">
            &lt;!&ndash;            false 生成的实体类为驼峰  ture 则是数据库字段什么样实体类就什么样&ndash;&gt;
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>-->
    </context>
</generatorConfiguration>
